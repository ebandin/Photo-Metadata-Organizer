
@{
    ViewData["Title"] = "Search";
}



@model Photo_Metadata_Organizer.Models.Photo
<h1> Search </h1>

<h2> this is an update</h2>


<h1>@Model.Title</h1>
<form action="/Search/Results">
    <p>
        @foreach (var column in Model.Columns)
        {
            var checkedColumn = column.Equals(Model.Column);

            <span>
                id="@column"
                value="@column"
                checked="@checkedColumn" />
                <label for="@column">@column</label>
            </span>
        }
    </p>

    <p>
        <label asp-for="Value"></label>
        <input asp-for="Value" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (Model.PhotoName != null)
{

    <h3>@Model.Photos.Count Result(s)</h3>

    @foreach (var job in Model.Photo)
    {
<table class="job-listing">
    <tr>
        <td>Name</td>
        <td>@Model.PhotoName</td>
    </tr>
    <tr>
        <td>Date and Time</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Date and Time</td>
        <td>@Model.DateTime</td>
    </tr>
    <tr>
        <td>Aperature</td>
        <td>@Model.FocalLength</td>
    </tr>
    <tr>
        <td>Exposure</td>
        <td>@Model.Exposure</td>
    </tr>
    <tr>
        <td>ISO</td>
        <td>@Model.ISO</td>
    </tr>
    <tr>
        <td>Focal Length</td>
        <td>@Model.WhiteBalance</td>
    </tr>
</table>
    }
}